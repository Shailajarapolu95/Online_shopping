<h3>Products</h3></br>
<div class="cover-container d-flex mx-auto flex-column header-bg"></div>
<section class="post-archive-section">
    <div class="container post-archive mb-8 ">
        <div class="row">
             <div class="d-md-flex bd-post-header  text-capitalize px-20 pt-5 pb-10">
                        <div class="col-sm-0 p-0 align-self-center">
                            <div class="d-md-flex p-0">
                                <div class="ml-md-auto mr-md-0 d-md-flex">
                                    <p class=" p-0 pl-md-3"></p>
                                   <% @products.each do |product| %>
                                    <div class="container-fluid ">
                                        <div class="row ">
                                            <%= image_tag(product.image_url.url, style: 'height:100px;width:100px;')%></br>
                                        </div>
                                        <div clas="row">
                                            <%= product.name %>
                                            <div class="row">
                                                Price : <%= product.price %>
                                            </div>
                                            <div class="row">
                                                Quantity : <%= product.quantity %>
                                            </div>
                                            <%# <%= link_to "Add to cart", line_items_path(:product_id => product.id)%> 
                                            <%# <%= link_to "Add to cart",cart_path(:product_id => product.id)%> %>
                                        </div>
                                    </div>
                                </div>
                                <% end %></br>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>