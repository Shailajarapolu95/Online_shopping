<body>
    <div id="login">
        <h3 class="text-center text-white pt-5">Login form</h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="" method="post">
                            <h3 class="text-center text-info">Login</h3>
                            <div class="form-group">
                                <div>
                                    <%= flash[:notice] if flash[:notice]%>
                                </div>
                                <%= form_tag '/login' do %>
                                <label for="Email" class="text-info"><%= label_tag 'Email :'%></label>
                                    <%= text_field_tag :name, params[:name], class: 'form-control' %></br> 
                                <label for="password" class="text-info"><%= label_tag 'Password : '%></label>
                                    <%= password_field_tag :password, params[:password], class: 'form-control' %>
                            </div>
                            <%= submit_tag "Log In" %></br></br>
                            <span>
                                <a class="link-primary" href="/signup">Sign Up</a>
                                 <%= link_to 'Logout', '/logout', :data => { :confirm => 'Are you sure?' }%>
                            </span>
                            <% end %>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body