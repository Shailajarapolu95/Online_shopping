<h2>Ordered Items</h2>
<section class="p-5 mb-4">
    <div class="row">
        <% @orders.each do |order| %>
            <% order.line_items.each do |line_item|%>
                <div class="col-md-12">
                    <%= image_tag(line_item.product.image_url.url, style: 'height:120px;width:120px;')%></br>
                </div>
                <div class="col-md-12">
                    <strong>Name :</strong><%= line_item.product.name %>
                </div>
                <div class="col-md-12">
                    <strong>Quantity :</strong><%= line_item.product.quantity %>
                </div>
                <div class="col-md-12">
                    <strong>Price :</strong><%= line_item.product.price%>
                </div>
                <div class="col-md-12">
                    <strong>Status :</strong><%= order.order_status%>
                </div>
                <div class="col-md-12">
                    <strong>Actual price :</strong><%= line_item.product.price%>
                </div>
                 <div class="col-md-12">
                    <strong>address_id :</strong><%= order.address_id%>
                </div>
             <hr>
            <% end %>
              <div class="col-md-12">
                    <strong>Final price :</strong><%= order.final_price%>
                </div>
        <% end %>
    </div>
</section>