<h2>Products</h2>
<section class="p-5 mb-4">
    <div class="row">
        <div>
            <%= flash[:notice] if flash[:notice]%>
        </div>
        <% @line_item.each do |line_item| %>
        <div class="col-md-12">
            <%= image_tag(line_item.product.image_url.url, style: 'height:120px;width:120px;')%></br>
        </div>
        <div class="col-md-12">
            <strong>Quantity :</strong><%= line_item.quantity %>
        </div>
        <div class="col-md-12">
            <strong>Name :</strong><%= line_item.product.name %>
        </div>
        <div class="col-md-12 ">
            <strong>Product id:</strong><%= line_item.product_id %>
        </div>
        <div class="col-md-12">
            <strong>Cart Id:</strong><%= line_item.cart_id %>
        </div>
        <div class="col-md-12">
            <strong>Price :</strong><%= line_item.price%>
        </div>
        <%# ?<%= link_to 'oder now', "/order/#{@cart.id}" %>
        <% end %></br>
        <%= form_with  url: "/order/#{@cart.id}" do |form| %>
        <% @addresses.each do |address|%>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
            <%= form.label :address, address.address_line_1 %></br>
        </div>
        <%end%>
        <button type="submit" class="btn btn-light">Order Now</button>
        <%end%>
    </div>
</section>